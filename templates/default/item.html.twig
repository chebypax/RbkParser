{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>{{ post.header }}</h3>
            </div>
            <div class="d-flex justify-content-between">
                <div>{{ post.author }}</div>
                <div>{{ post.createdAt|date }}</div>
            </div>
            <img src="{{ post.mainImage }}" alt="post_image">
            <div class="card-body">
                {{ post.content|raw}}
            </div>
        </div>
    </div>
{% endblock %}
